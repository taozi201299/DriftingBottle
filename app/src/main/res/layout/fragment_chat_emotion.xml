<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#F3F3F3"
        >

        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_chat_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <com.driftingbottle.widget.IndicatorView
        android:id="@+id/fragment_chat_group"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#F3F3F3"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/rg_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40dp"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingRight="11dp">

            <RadioButton
                android:id="@+id/btn_add"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/selector_bk_rb"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@mipmap/icon_chat_add"
                android:paddingTop="@dimen/_10dp" />

            <RadioButton
                android:id="@+id/btn_emoji"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/selector_bk_rb"
                android:layout_marginLeft="@dimen/_1dp"
                android:button="@null"
                android:drawableTop="@mipmap/icon_chat_add"
                android:paddingTop="@dimen/_10dp" />

            <RadioButton
                android:id="@+id/btn_collection"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:layout_marginLeft="@dimen/_1dp"
                android:background="@drawable/selector_bk_rb"
                android:button="@null"
                android:drawableTop="@mipmap/icon_chat_add"
                android:paddingTop="@dimen/_10dp" />
        </RadioGroup>
    </HorizontalScrollView>

</LinearLayout>