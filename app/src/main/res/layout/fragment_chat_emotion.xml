<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <android.support.v4.view.ViewPager
            android:id="@+id/fragment_chat_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <com.driftingbottle.widget.IndicatorView
        android:id="@+id/fragment_chat_group"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center"
        android:orientation="horizontal" />

    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingRight="11dp">

        <RadioButton
            android:id="@+id/btn_add"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:background="@drawable/selector_bk_rb"
            android:button="@null"
            android:drawableTop="@mipmap/icon_chat_add"
            android:paddingTop="@dimen/_10dp" />

        <RadioButton
            android:id="@+id/btn_emoji"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:paddingTop="@dimen/_10dp"
            android:background="@drawable/selector_bk_rb"
            android:button="@null"
            android:drawableTop="@mipmap/icon_chat_add"
            android:layout_marginLeft="@dimen/_1dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/btn_setting"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:paddingTop="@dimen/_10dp"
            android:background="@drawable/selector_bk_rb"
            android:layout_marginLeft="@dimen/_1dp"
            android:button="@null"
            android:drawableTop="@mipmap/icon_chat_add" />
    </RadioGroup>

</LinearLayout>